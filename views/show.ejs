<html>
    <head>
        <title>Braden Lawrence</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.css">
        <link rel="stylesheet" type="text/css" href="/css/slider.css">
        <link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>

<div class="ui container">
  
    <div class="ui menu">
      <div class="header item">
        Braden Lawrence
      </div>
      <a class="item">
        Contact
      </a>
    </div>

<div class="ui segments" id="sliderFrame">
    <div class="slider">
        <div class="slides">
            <% project.images.forEach(function(image){ %>
                <div class="slide-item ">
                    <div class="ui segments">
                        <div class="ui segment">
                            <img class="ui centered big image" src="<%= image.url %>">
                        </div>
                        <div class="ui segment">
                            <p><%= image.description %></p>
                        </div>
                    </div>
                </div>
            <% }) %> 
         </div>
    </div>
    <div class="ui segment">
        <h3 class="ui header"><%= project.title %></h3>
        <div class="meta">
            <span class="client"><%= project.client %></span>
            <span class="media">
              <% project.media.forEach(function(mediaType) { %>
                <%= mediaType %>, 
              <% }) %>
            </span>
        </div>
        <p><%= project.description  %></p>
    </div>
</div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.11/semantic.min.js"></script>
<script src="/js/glide.js"></script>
<script>
var description = $("#description")
var slider = $('.slider').glide({
  autoplay: false,
  arrowsWrapperClass: 'slider-arrows',
  arrows: '#sliderFrame',
  arrowRightText: '',
  arrowLeftText: ''
})
</script>